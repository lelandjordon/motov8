<h2>Sign Up!</h2>


<%= form_for @author do |f| %>

  <% if @author.errors.any? %>
  <div id="error-messages">
    <% @author.errors.full_messages.each do |msg|  %>
      <p><%= msg %></p>
    <% end  %>
  </div>
  <% end %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit %>
<% end %>
