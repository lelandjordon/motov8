<h2>Comments</h2>
<h3><%= link_to "New Comment", new_comment_path %></h3>
<ul>
  <% @comments.each do |comment| %>
    <li>
      <p>
      <%= link_to comment.body, comment %> | <%= link_to 'Delete', comment_path(comment),
                                              method: :delete,
                                              data: { confirm: 'Are you sure?' } %>
      </p>
    </li>
  <% end %>
</ul>
