<section class="post-info">
  <h2>
    <%= @post.title %>
    <% if can? :update, @post %>
      <%= link_to "(edit)", edit_post_path(@post) %>
    <% end %>
  </h2>

  <p>By: <%= @post.author.email %></p>
</section>

<h3><%= @post.body %></h3>
