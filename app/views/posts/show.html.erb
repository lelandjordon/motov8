<section class="post-info">
  <h2>
    <%= @post.title %>
    <%= link_to "(edit)", edit_post_path(@post) %>
  </h2>

  <p class="nationality"><%= @post.author %></p>
</section>

<p><%= @post.body %></p>

<section class="post-comments">
  <h2>comments</h2>
  <ul>
    <% @post.comments.each do |comment| %>
      <li><%= link_to comment.author, comment %></li>
    <% end %>
  </ul>
</section>
