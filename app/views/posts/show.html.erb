<section class="post-info">
  <h2>
    <%= @post.title %>
    <% if can? :update, @post %>
      <%= link_to "(edit)", edit_post_path(@post) %>
    <% end %>
  </h2>

  <p>By: <%= @post.author.email %></p>
</section>

<h3><%= @post.body %></h3>


<h3>Comments</h3>
  <% if current_author %>
    <%= link_to "Add new comment", new_post_comment_path(@post) %>
  <% end %>
  <% @post.comments.each do |comment| %>
    <div>
      <ul>
	      <li><%= comment.title %></li>
	      <li><%= comment.body %></li>
        <li>By: <%= comment.author.email %></li>
      </ul>
      <% if can? :update, @comment %>
	<%= link_to "Edit", edit_post_comment_path(@post, post_comment) %> |
	<%= link_to "Delete", post_comment_path(@post, comment), method: :delete %>
      <% end %>
    </div>
  <% end %>
