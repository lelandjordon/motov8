<h3>Comments</h3>
  <% if current_author %>
    <%= link_to "Add new comment", new_comment_path(@post) %>
  <% end %>
  <% @post.comments.each do |comment| %>
    <div>
      <p>
	<%= comment.body %>
      </p>
      <% if can? :update, @comment %>
	<%= link_to "Edit", edit_comment_path(@post, comment) %> |
	<%= link_to "Delete", comment_path(@post, comment), method: :delete %>
      <% end %>
    </div>
  <% end %>
